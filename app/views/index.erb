<%= erb :_header %>
<div class="container">


<% if login? %>
  <div class="jumbotron">
    <h1>"Welcome <%= "#{username}" %>!"</h1>

  </div>


  <% @decks.each do |deck| %>
    <div class="col-md-4">
      <h2> <%= deck.subject.gsub("-", " ").capitalize %> </p> </h2>
      <p> <% deck.cards.each_with_index do |card, index| %>
            <%= card.question if index<8 %>
          <% end %>
      </p>
      <p><a class="btn btn-success" href="/decks/<%= deck.subject %>" role="button">Start Challenge!</a></p>
    </div>
  <% end %>


<% else %>
  <form action="/login" method="post">
    <div>
      <label> Username:</label>
      <input id="username" type="text" name="username">
    </div>
    <div>
      <label>Password:</label>
      <input id="password" type="password" name="password">
    </div>
    <div>
      <input type="submit" value="Login">
      <input type="reset" value="Clear">
    </div>
  <form>
  <p>
    <a href="/signup">Signup</a>
<% end %>

</div>